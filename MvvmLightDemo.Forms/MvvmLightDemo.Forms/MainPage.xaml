<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MvvmLightDemo.Forms.MainPage">
  <StackLayout Orientation="Vertical" Padding="20">
    <Label Text="Xamarin Forms IoC Test" FontAttributes="Bold" FontSize="Medium" XAlign="Center"/>
    <Label Text="{Binding PlatformName, StringFormat='Platform : {0}'}" />
    <Label Text="{Binding ContainerName, StringFormat='Container : {0}'}" />
    <Label Text="{Binding UserName, StringFormat='UserName : {0}'}" />
    <Label Text="{Binding Password, StringFormat='Password : {0}'}" />
  </StackLayout>
</ContentPage>